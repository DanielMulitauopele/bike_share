<div class="container">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">

      <div class="card">
        <div class="card-header">
          Log In
        </div>
        <div class="card-body">
          <%= form_for :login do |f| %>
            <div class="text-center">
              <%= f.label :email %>
              <%= f.text_field :email, autofocus: true %>
            </div>
            <div class="text-center">
              <%= f.label :password %>
              <%= f.password_field :password %>
            </div>
            </br>
            <div class="container">
              <div class="row">
                <div class="col-sm"></div>

                <div class="col-sm">
                  <%= f.submit "Login", class: "btn btn-primary" %>
                </div>
                <div class="col-sm">
                <%= link_to 'Create Account', new_user_path, class: "btn btn-secondary" %>
              </div>
                <div class="col-sm"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm"></div>
  </div>
</div>
