<!DOCTYPE html>
<html>
  <head>
    <title>BikeShare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <%= "Logged in as #{current_user.name}" %> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Log In', login_path %> or <%= link_to 'Sign Up', new_user_path %>
    <% end %>

    <hr>
<% flash.each do |type, message| %>
  <%= content_tag :div, message, class: type %>
<% end %>
<p id="Cart-Header"><%= link_to 'Cart: ', carts_path %><%= @cart.total_count %></p>
    <%= yield %>
  </body>
</html>
