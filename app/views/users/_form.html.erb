<div class="container">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">
      <%= form_for @user do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>


        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit %>
      <% end %>


    </div>
    <div class="col-sm"></div>
  </div>
</div>
