<h4 class='text-center'>Name: <%= current_user.name %></h4>
<h4 class='text-center'>Current Email: <%= current_user.email %></h4>
<h4 class='text-center'>Current Address: <%= current_user.address %></h4>
<p class='text-center'><%= link_to "Edit Profile Information", edit_user_path(@user) %>

<h4 class='text-center'>All Orders: </h4>

<div class="container">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-10">
      <ul class="list-group">
        <% @orders.each do |order| %>
        <li class="list-group-item text-center"><%= link_to "Order Number: #{order.id}", order_path(order)%></li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm"></div>
  </div>
</div>
