<h2 class="text-center">Order <%= @order.id %> Details</h2>

<% if current_admin? %>
  <p class="text-center"><%= link_to "Back to All Orders", admin_dashboard_path%></p>
<% else %>
  <p class="text-center"><%= link_to "Back to All Orders", dashboard_path, class: "text-center"  %></p>
<% end %>




<% if current_admin? %>
  <ul class='text-center'>
    <li class='text-center'><%= @order.user.name %></li>
    <li class='text-center'><%= @order.user.address %></li>
    <li class='text-center'><%= link_to 'Edit', edit_admin_order_path(@order) %></li>
  </ul>

<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-12">

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Item</th>
            <th scope="col">Subtotal</th>
            <th scope="col">Quantity</th>
          </tr>
        </thead>
        <tbody>
          <% @accessories.each do |accessory, values_hash| %>
          <tr id="accessory-<%= accessory.id %>">
            <td><%= link_to accessory.title, accessory_path(accessory) %></td>
            <td><%= number_to_currency(values_hash['subtotal']) %></td>
            <td><%= values_hash['count'] %></td>
          </tr>
          <% end %>
          <tr>
            <td></td>
            <td></td>

            <td>Order Total: <%= number_to_currency(@order.total) %></td>
          </tr>

        </tbody>
      </table>
      <h4 class="text-center"></h4>
      <h4 class="text-center"></h4>
      <h4 class="text-center"></h4>

      <table class="table">

  <tbody>
    <tr>
      <td>Status: <%= @order.status %></td>
      <td>Created: <%= @order.created_at %></td>
      <td>Updated: <%= @order.updated_at %></td>
    </tr>

  </tbody>
</table>

    </div>
    <div class="col-sm"></div>
  </div>
</div>
