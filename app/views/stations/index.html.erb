<h1 class='text-center'>All Stations</h1>

<p class='text-center'><%= link_to 'Stations Dashboard', stations_dashboard_path %></p>

<% if current_admin? %>
  <p class='text-center'><%= link_to 'Create A New Station', new_admin_station_path %></p>
<% end %>



<table class="table">
  <thead>
    <tr>
      <th scope="col">Station</th>
      <th scope="col">Dock Count</th>
      <th scope="col">City</th>
      <th scope="col">Installed</th>
    </tr>
  </thead>
  <tbody>
    <% @stations.each do |station| %>
    <tr id="station-<%= station.id %>">
      <th scope="row"><%= link_to station.name, station_path(station)%></th>
      <td><%= station.dock_count %></td>
      <td><%= station.city %></td>
      <td><%= station.installation_date %></td>
      <% if current_admin? %>
        <td><%= link_to 'Edit', edit_admin_station_path(station) %></td>
        <td><%= link_to 'Delete', admin_station_path(station), method: :delete %></td>
      <% end %>
    </tr>
    <% end %>

  </tbody>
</table>
